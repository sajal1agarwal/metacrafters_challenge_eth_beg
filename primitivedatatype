pragma solidity ^0.8.0;
contract GasDataType {
    address payable public owner;
    
    uint256 public GetWei;
      uint256 public GetEther;
       uint256 public GetGwei;
       
    constructor()  {
        owner = payable(msg.sender);
    }
    function GettingEther() public payable {
        require(msg.value > 0, "non zero transact amount");
        owner.transfer(msg.value);
    } 
    
    
    function getEther() public payable {
    GetEther =  msg.value / (10**18);
}


    function getWei() public  payable{
      GetWei = msg.value;
    }


    function getGwei() public payable  {
        GetGwei =  msg.value / 1 gwei;
    }
}
